{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0",
  "description": "Displays current weather information",
  "permissions": ["storage", "geolocation"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["geolocation"]
}
